@model PersonelList.Areas.Admin.Model.Register


@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<PersonelList.Models.Department> departments = ViewBag.Departments;
}

<div class="d-flex justify-content-center">
    <h3 class="display-3">Yeni Üye Kayıt</h3>
</div>
<br />
<div class="row ">
    <div class="col-md-8 m-auto">
        <hr />
    </div>

</div>
<br />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row d-flex ">
    <div class=" col-md-8 m-auto">
        <form action="register" method="post" enctype="multipart/form-data">
            <div class="row">


                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Resim Seçiniz </label>
                </div>

                <div class="col-md-6" style="padding-left: 140px">
                    <label for="inputTag" class="label" style="cursor:pointer">

                        <i class="fa fa-2x fa-camera"></i>
                        <input id="inputTag" type="file" multiple name="ImageFiles" style="display:none" />
                        <br />
                    </label>
                    <span class="text-white" visible="false" style="font-size:15px" id="imageName"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Adınız  </label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="FirstName" value="" required class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Soyadınız  </label>

                </div>
                <div class="col-md-6">
                    <input type="text" name="LastName" value="" required class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Telefon Numarası  </label>

                </div>

                <div class="col-md-6">
                    <input type="text" name="Phone" value="" required class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Departman Seçiniz  </label>

                </div>
                
                <div class="col-md-6">
                    <select class="form-control" name="DepartmentId" id="burda">
                        <option value="0">Departmanı Seçiniz</option>
                        @foreach (var item in departments)
                        {
                           <option  value="@(item.Id)">@item.Name</option>
                            
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold " style="background-color:grey;border:none">Doğum Tarihi  </label>

                </div>
                <div class="col-md-6">
                    <input type="date" name="BirthDay" value="" class="form-control detePicker" />
                    <span></span>
                </div>
                <div class="col-md-6">
                    <label class="form-control text-white font-weight-bold" style="background-color:grey;border:none">Yöneticilik Durumu  </label>

                </div>
                <div class="col-md-6">
                    
                    @Html.CheckBoxFor(a=>a.IsManager, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-6">

                </div>
                <div class="col-md-6" style="padding-left:115px">
                    <button class="btn btn-info">Kaydet</button>
                </div>



            </div>


        </form>

    </div>


</div>





<script>

    console.log($("#burda").val())

    $("#inputTag").css("visible", true);
    (document.getElementById("inputTag")).addEventListener("change", () => {
        let inputImage = document.querySelector("input[type=file]").files;
        var count = inputImage.length;
        console.log(count)
        document.getElementById("imageName").innerText = "    (" + count + ") Adet";
    })
</script>

